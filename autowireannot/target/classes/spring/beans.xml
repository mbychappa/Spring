<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">
 
<context:annotation-config />

<!-- Maruthi Car Bean Definition -->
 <bean id="Maruthi" class="com.example.spring.Maruthi"/>
 
<!-- Benz Car Bean Definition -->
<bean id="model" class="com.example.spring.Benz"/>


<!-- Auto-wiring Car Bean by property--> 
<bean id="Car" class="com.example.spring.Car"/>
<!-- Same as below
<bean id="Car" class="com.example.spring.Car" autowire="byName"/>
 -->
 
<!-- Auto-wiring Car Bean by Method--> 
<bean id="Car1" class="com.example.spring.Car1"/>
 

<!-- Auto-wiring Car Bean by Method--> 
<bean id="Car2" class="com.example.spring.Car2"/>
<!-- Same as below
<bean id="Car" class="com.example.spring.Car" autowire="constructor"/>
 -->
   
 </beans>
 
 